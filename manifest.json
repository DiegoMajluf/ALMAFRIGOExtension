{
	"manifest_version": 2,
	"name": "ALMAFRIGO",
	"description": "Operaciones Internas de ALMAFRIGO",
	"version": "1.4.1",
	"author": "ALMAFRIGO",
	"icons": {
		"128": "iconos/IconoAlmafrigo128.png",
		"48": "iconos/IconoAlmafrigo48.png",
		"16": "iconos/IconoAlmafrigo16.png"
	},
	"page_action": {
		"default_icon": {
			"38": "iconos/IconoAlmafrigo38.png"
		}
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"https://www.almafrigo.cl/operaciones.aspx*"
			],
			"js": [
				"content_operaciones.js"
			]
		}
	],
	"permissions": [
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"*://www.almafrigo.cl/*",
		"https://www.google.com/cloudprint/*"
		
	],
	"externally_connectable": {
		"matches": ["*://www.almafrigo.cl/operaciones.aspx*", "http://localhost:51346/operaciones.aspx*"]
	  }
}